{
  "name": "food-shop-server",
  "version": "1.0.0",
  "description": "Backend server for food shop application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsup src/server.ts --watch --onSuccess \"node dist/server.js\"",
    "build": "tsup",
    "lint": "eslint .",
    "format": "prettier --write .",
    "fix-sql3": "pnpm rebuild sqlite3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.25",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3"
  }
}

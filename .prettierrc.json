{
  "semi": true,
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "es5",
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": ["client/**/*.*"],
      "options": {
        "jsxSingleQuote": true
      }
    },
    {
      "files": ["server/**/*.*"],
      "options": {}
    }
  ]
}
